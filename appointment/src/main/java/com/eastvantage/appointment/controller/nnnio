  <script src="app.js"></script>
  <script>
    // Drawer toggle behavior
    const drawer = document.getElementById("drawer");
    const toggleDrawerBtn = document.getElementById("toggleDrawer");
    const collapseDrawerBtn = document.getElementById("collapseDrawer");

    toggleDrawerBtn.onclick = () => {
      drawer.classList.toggle("-translate-x-full");
    };

    collapseDrawerBtn.onclick = () => {
      drawer.classList.add("-translate-x-full");
    };

    // Auto-close drawer on sheet select (hooked from JS later)
    function closeDrawer() {
      if (window.innerWidth < 640) drawer.classList.add("-translate-x-full");
    }
  </script>
